class IllegalParkingRecord(models.Model):
    record_num = models.IntegerField(null=True, blank=True)
    timestamp = models.DateTimeField(auto_now_add=True)
    district = models.CharField(max_length=50, null=True, blank=True)

    class Meta:
        ordering = ['-timestamp']

    def save(self, *args, **kwargs):
        if self.record_num is None:
            max_record = IllegalParkingRecord.objects.aggregate(Max('record_num'))['record_num__max']
            self.record_num = (max_record or 0) + 1
        super().save(*args, **kwargs)

    def __str__(self):
        return f"{self.record_num} - {self.district} - {self.timestamp.strftime('%Y-%m-%d %H:%M:%S')}"
